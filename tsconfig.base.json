{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "customConditions": ["@mf-ecom-react19/source"],
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "products/*": ["apps/host/@mf-types/*"],
      "@mf-ecom-react19/logger": ["packages/logger/src/index.ts"]
    }
  }
}
